{
  "openapi": "3.0.0",
  "info": {
    "description": "API to exchange with customers accounting application\n",
    "version": "1.0.0",
    "title": "Describing the root to communicate with customers accounting application",
    "contact": {
      "email": "it-squad-money@ekwateur.fr"
    }
  },
  "servers": [
    {
      "description": "DEV",
      "url": "https://customers-accounting.ekwadev.fr"
    },
    {
      "description": "QUAL",
      "url": "https://customers-accounting.ekwaqua.fr"
    },
    {
      "description": "PREPROD",
      "url": "TODO"
    },
    {
      "description": "PROD",
      "url": "TODO"
    }
  ],
  "paths": {
    "/api/v1/customers/accounting/company": {
      "post": {
        "tags": [
          "Company"
        ],
        "operationId": "createCompany",
        "summary": "Create a company from a Json",
        "description": "Create a company",
        "requestBody": {
          "description": "Company to create",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CompanyDetails"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Company was created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CompanyDetailsResources"
                }
              }
            }
          },
          "400": {
            "description": "Company empty",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CompanyDetails"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Company"
        ],
        "operationId": "findAll",
        "summary": "Find all company details data",
        "description": "Find all company details data stored in the database",
        "responses": {
          "200": {
            "description": "All company details data was returned",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CompanyResources"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/customers/accounting/company/{company-erp-code}": {
      "get": {
        "tags": [
          "Company"
        ],
        "operationId": "getCompanyByCompanyErpCode",
        "summary": "Get company details details by Id",
        "description": "Get company details by Id",
        "parameters": [
          {
            "name": "company-erp-code",
            "in": "path",
            "description": "the code of company",
            "required": true,
            "schema": {
              "type": "string",
              "example": "EKW_PRO"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Company details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CompanyDetailsResources"
                }
              }
            }
          },
          "404": {
            "description": "Company not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CompanyDetailsResources"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Company"
        ],
        "operationId": "updateCompanyByCompanyErpCode",
        "summary": "Updating company details entry",
        "description": "update company",
        "parameters": [
          {
            "name": "company-erp-code",
            "in": "path",
            "description": "the code of company",
            "required": true,
            "schema": {
              "type": "string",
              "example": "EKW_PRO"
            }
          }
        ],
        "requestBody": {
          "description": "Company details to update",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CompanyDetails"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Company details was updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CompanyDetailsResources"
                }
              }
            }
          },
          "404": {
            "description": "COMPANY_NOT_FOUND",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CompanyDetailsResources"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CompanyResources": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Company not found"
          },
          "code": {
            "type": "string",
            "description": "Short code to identify the error",
            "example": "COMPANY_EMPTY"
          },
          "companyDetails": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CompanyDetails"
            }
          }
        }
      },
      "CompanyDetailsResources": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Company not found"
          },
          "code": {
            "type": "string",
            "description": "Short code to identify the error",
            "example": "COMPANY_EMPTY"
          },
          "companyDetails": {
            "$ref": "#/components/schemas/CompanyDetails"
          }
        }
      },
      "CompanyDetails": {
        "type": "object",
        "required": [
          "companyErpCode",
          "companyName",
          "siren"
        ],
        "properties": {
          "companyErpCode": {
            "type": "string",
            "description": "company ERP code",
            "example": "JOUL"
          },
          "companyName": {
            "type": "string",
            "description": "name of a company",
            "example": "Ekwateur"
          },
          "siren":{
            "type": "string",
            "description": "siren of a company",
            "example": "12365478"
          },
          "address":{
            "type": "string",
            "description": "addres of a company",
            "example": "78 Rue Roussvelt Paris 786203 France"
          }
        }
      }
    }
  }
}